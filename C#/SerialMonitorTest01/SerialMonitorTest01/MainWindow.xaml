        <Label Name="lblStatus" Content="Label" HorizontalAlignment="Left" Margin="54,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.912,0.093" Width="126"/>
        <TextBox Name="txtIncoming" HorizontalAlignment="Left" Height="22" Margin="54,200,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="293" TextChanged="txtIncoming_TextChanged"/>

    </Grid>
</Window>
