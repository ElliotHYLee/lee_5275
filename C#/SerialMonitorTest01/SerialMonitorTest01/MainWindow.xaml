        <Button Name ="btnConnect" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="271,95,0,0" Click="btnConnect_Clicked"/>
        <Label Content="Com Port" HorizontalAlignment="Left" Margin="54,61,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
        <Label Content="BaudRate" HorizontalAlignment="Left" Margin="54,92,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
        <TextBox Name="txtSend" HorizontalAlignment="Left" Height="23" Margin="54,160,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="293" TextChanged="txtSend_TextChanged"/>
